<?xml version="1.0" encoding="UTF-8"?>
<package>
	<object>
		<api>XML_Translation</api>
	</object>
	
	<view>
		<name>Skeleton</name>
		<name>XML_Translation</name>
	</view>

	<path>
		<website>__AMSLIB_ROUTER_ACTIVE__</website>
		<admin>__WEBSITE__</admin>
		<amslib>__WEBSITE__/amslib/</amslib>
		<plugin>__WEBSITE__/plugins/</plugin>
		<include>__WEBSITE__/objects/</include>
	</path>
	
	<!-- TRANSLATOR CONFIGURATION: Configure a translator with the required configuration
		<name>
			a unique name to reference the "translator" through which
			all the translations for that system will come from and be stored
		<type>
			values: 	'xml', 'database'
		<location>	
			database:	'Name_Of_Database_Object/db_table_name'
			xml:		'/directory_to_the_xml_files/'
		<language>
			the language code, e.g. en_GB, es_ES, es_CA, fr_FR, etc
			
		NOTE:
			If you are using a database type, the Name_Of_Database_Object must be in the 
			include path, therefore will invoke the auto_loader from amslib
	-->
	<translator>
		<name>website</name>
		<type>xml</type>
		<location>/translations/</location>
		<language>en_GB</language>
		<language>es_ES</language>
	</translator>
	
	<stylesheet>
		<file id="html5" autoload="true">__AMSLIB__/css/Amslib.css</file>
	</stylesheet>
	
	<javascript>
		<file id="jquery" autoload="true">__AMSLIB__/util/jquery-1.8.3.min.js</file>
		<file id="modernizr" autoload="true">__AMSLIB__/util/modernizr-2.6.1.full.js</file>
		<!-- my.* allows you to create object orientated javascript easily -->
		<file id="my.common" autoload="true">__AMSLIB__/util/my.common.min.js</file>
		<file id="my.class" autoload="true">__AMSLIB__/util/my.class.min.js</file>
		<file id="amslib" autoload="true">__AMSLIB__/js/Amslib.js</file>
	</javascript>
	
	<router>
		<path name="xml_translation">
			<src lang="default">/</src>
			<src lang="en_GB">/home/</src>
			<src lang="es_ES">/inicio/</src>
			<resource>XML_Translation</resource>
		</path>
	</router>
</package>